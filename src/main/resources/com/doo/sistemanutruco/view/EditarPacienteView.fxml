<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.doo.sistemanutruco.controller.EditarPacienteController" spacing="10" style="-fx-padding: 20;">
    <Label text="Editar Paciente" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <GridPane hgap="10" vgap="10">
        <padding>
            <Insets top="10" right="10" bottom="10" left="10"/>
        </padding>

        <columnConstraints>
            <ColumnConstraints halignment="RIGHT"/>
            <ColumnConstraints halignment="LEFT"/>
        </columnConstraints>

        <Label text="CPF:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="cpfTextField" GridPane.rowIndex="0" GridPane.columnIndex="1" editable="false"/>

        <Label text="Nome:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="nomeTextField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Data de Nascimento:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <DatePicker fx:id="dataNascimentoDatePicker" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="Telefone:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <TextField fx:id="telefoneTextField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

        <Label text="Email:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
        <TextField fx:id="emailTextField" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

        <Label text="Peso:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
        <TextField fx:id="pesoTextField" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

        <Label text="Altura:" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
        <TextField fx:id="alturaTextField" GridPane.rowIndex="6" GridPane.columnIndex="1"/>

        <Label text="Objetivo:" GridPane.rowIndex="7" GridPane.columnIndex="0"/>
        <TextField fx:id="objetivoTextField" GridPane.rowIndex="7" GridPane.columnIndex="1"/>

        <Label text="Porcentagem Gordura:" GridPane.rowIndex="8" GridPane.columnIndex="0"/>
        <TextField fx:id="porcentagemGorduraTextField" GridPane.rowIndex="8" GridPane.columnIndex="1"/>

        <Label text="Porcentagem Massa Magra:" GridPane.rowIndex="9" GridPane.columnIndex="0"/>
        <TextField fx:id="porcentagemMassaMagraTextField" GridPane.rowIndex="9" GridPane.columnIndex="1"/>

        <Label text="Porcentagem Massa Gorda:" GridPane.rowIndex="10" GridPane.columnIndex="0"/>
        <TextField fx:id="porcentagemMassaGordaTextField" GridPane.rowIndex="10" GridPane.columnIndex="1"/>

        <Label text="Colesterol LDL:" GridPane.rowIndex="11" GridPane.columnIndex="0"/>
        <TextField fx:id="colesterolLDLTextField" GridPane.rowIndex="11" GridPane.columnIndex="1"/>

        <Label text="Colesterol HDL:" GridPane.rowIndex="12" GridPane.columnIndex="0"/>
        <TextField fx:id="colesterolHDLTextField" GridPane.rowIndex="12" GridPane.columnIndex="1"/>

        <Label text="Hipertenso:" GridPane.rowIndex="13" GridPane.columnIndex="0"/>
        <CheckBox fx:id="hipertensoCheckBox" GridPane.rowIndex="13" GridPane.columnIndex="1"/>

        <Label text="Diabético:" GridPane.rowIndex="14" GridPane.columnIndex="0"/>
        <CheckBox fx:id="diabeticoCheckBox" GridPane.rowIndex="14" GridPane.columnIndex="1"/>

        <Label text="Celíaco:" GridPane.rowIndex="15" GridPane.columnIndex="0"/>
        <CheckBox fx:id="celiacoCheckBox" GridPane.rowIndex="15" GridPane.columnIndex="1"/>
    </GridPane>

    <Button text="Salvar" onAction="#handleSalvarPaciente"/>
    <Button text="Cancelar" onAction="#handleCancelar"/>
    <Label fx:id="statusLabel" textFill="red"/>
</VBox>
